#:import DeviceConnectionError ui.popups.DeviceConnectionError
#:import run_device_emulator utils.run_device_emulator
#:import run_zup_emulator utils.run_zup_emulator

<DeviceConnectionError>
    title:     "Ошибка подключения блока"
    size:       (450, 320)
    size_hint : (None,None)

    BoxLayout:
        orientation:    'vertical'
        spacing:    10
        padding:    15

        Label:
            text:   "Блок ИА-ТДИ не подключен!!!"
            font_size: '20dp'

        MDRaisedButton:
            #size_hint : (1,0.3)
            text:   'Закрыть ПО и разобраться с аппарутрой!'
            font_size: '20dp'
            pos_hint: {"center_x": .5}
            on_press:   app.stop()

        MDRaisedButton:
            text:       'Работать с эмулятором блока'
            font_size:  '20dp'
            pos_hint:   {"center_x": .5}
            on_press:   run_device_emulator()
            on_press:   root.dismiss()

